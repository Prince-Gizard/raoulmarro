{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/app/*": [
        "./*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/layouts/*": [
        "./src/layouts/*"
      ],
      "@/widgets/*": [
        "./src/widgets/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/entities/*": [
        "./src/entities/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
